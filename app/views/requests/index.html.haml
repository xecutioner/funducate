#request_container
  - @requests.each do |request|
    .request_content
      .request_info
        %p
          Funded:#{get_funded_amount(request)}
        %p= request.pledged_amount
        %p= request.deadline
      .request_details
        %p
          %b= request.title
        %p= request.description.truncate(125)
        %p= link_to(image_tag('button-more.png'), request_path(request),:id =>"Read_more")
  = will_paginate @requests